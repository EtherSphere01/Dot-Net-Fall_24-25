
@{
    ViewBag.Title = "Details";
}

<h2>Channel Details</h2>

<table class="table table-bordered">
    <tr>
        <th colspan="4" class="text-center">@Model.ChannelName</th>
    </tr>
    <tr>
        <th>Program Id</th>
        <th>Program Name</th>
        <th>Air Time</th>
        <th>TRP</th>
    </tr>
    @foreach (var item in ViewBag.plist)
    {
        <tr>
            <td>@item.ProgramId</td>
            <td>@item.ProgramName</td>
            <td>@item.AirTime</td>
            <td>@item.TRPScore</td>
        </tr>
    }
</table>
<input type="hidden" name="ChannelId" value="@Model.ChannelId" />
<a href="/channel/list" class="btn btn-warning">Back to List</a>
