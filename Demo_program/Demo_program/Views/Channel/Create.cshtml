
@{
    ViewBag.Title = "Create";
}

<h2>Create Channel</h2>

<form method="post">
    <span>Channel Name</span>
    <input type="text" value="@Model.ChannelName" name="ChannelName" class="form-control" />
    <span>Established Year</span>
    <input type="number" value="@Model.EstablishedYear" min="1900" name="EstablishedYear" class="form-control" />
    <span>Country</span>
    <input type="text" value="@Model.Country" name="Country" class="form-control" />
    <br />
    <input type="submit" value="Create" class="btn btn-primary" />
    <a href="/channel/list" class="btn btn-warning">Back to List</a>

</form>

