
@{
    ViewBag.Title = "Delete";
}

<h2>Delete Channel</h2>
@if (TempData["msg"] != null) { 
    <span class="text-bg-danger font-monospace">
        @TempData["msg"]
       @if (TempData["cnt"]!=null)
       {
           string k = Session["increase"].ToString();
           int  p = Convert.ToInt32(k);
           p = p + 1;
           Session["increase"] = p.ToString();
       }
        @TempData["cnt"]
    </span>
 }
<form method="post">
    <table class="table table-bordered">
        <tr>
            <th colspan="4" class="text-center">@Model.ChannelName</th>
        </tr>
        <tr>
            <th>Program Id</th>
            <th>Program Name</th>
            <th>Air Time</th>
            <th>TRP</th>
        </tr>
        @foreach (var item in ViewBag.plist)
        {
            <tr>
                <td>@item.ProgramId</td>
                <td>@item.ProgramName</td>
                <td>@item.AirTime</td>
                <td>@item.TRPScore</td>
            </tr>
        }
    </table>
    <input type="hidden" name="ChannelId" value="@Model.ChannelId" />
    <input type="submit" value="Yes" class="btn btn-danger" name="dcsn" />
    <input type="submit" value="No" class="btn btn-warning" name="dcsn" />
</form>
